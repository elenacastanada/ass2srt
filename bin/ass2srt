#!/usr/bin/env ruby
$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'ass2srt'
=begin
    (Just a Ruby programming language syntax review again!!!)
    ASS (Advanced Sub Station Alpha) !!! file converter to srt file
=end

if ARGV.length == 1
    
    ass_to_srt ARGV[0]

else
    puts "\nPlease enter ass filename only!!!"
end